{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "apply", "layer", "config"]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "backdrop-filter",
          "-webkit-backdrop-filter",
          "-webkit-text-size-adjust",
          "text-size-adjust"
        ]
      }
    ],
    "property-no-vendor-prefix": null,
    "value-no-vendor-prefix": null
  }
}